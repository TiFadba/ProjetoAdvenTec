@model ProjetoAdvenTec.Models.AvaliacaoMensal

@{
    ViewData["Title"] = "Editar Avaliação";
}

<style>
    body {
        color: white;
        background-color: #4F4F4F;
    }
</style>

<h1 class="text-center display-3"><i class="fas fa-paste mr-1"></i>Editar Usuário </h1>

<h4 class="lead mt-3">Altere os campos abaixo: </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="dataReferencia" class="control-label"></label>
                <input asp-for="dataReferencia" class="form-control" />
                <span asp-validation-for="dataReferencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dataInicio" class="control-label"></label>
                <input asp-for="dataInicio" class="form-control" />
                <span asp-validation-for="dataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="diasExpirar" class="control-label"></label>
                <input asp-for="diasExpirar" class="form-control" />
                <span asp-validation-for="diasExpirar" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="encerrado" /> @Html.DisplayNameFor(model => model.encerrado)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a onclick="voltarPaginaInicialAvaliacao('@Url.Action("RetornarPaginaPrincipal","AvaliacaoMensais")', @ViewBag.idUsuario)">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    $("#navbarPagina").hide()
    $("#footerPagina").hide()
</script>