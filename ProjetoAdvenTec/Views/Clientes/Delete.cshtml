@model ProjetoAdvenTec.Models.Cliente

@{
    ViewData["Title"] = "Excluír Cliente";
}

<style>
    body {
        color: white;
        background-color: #4F4F4F;
    }
</style>

<h1 class="text-center display-3"> <i class="fas fa-user-tie mr-1"></i>Excluír Cliente </h1>

<h4 class="lead mt-3">Tem certeza que deseja fazer isso?</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.nomeCliente)
        </dt>
        <dd class="col-sm-5">
            @Html.DisplayFor(model => model.nomeCliente)
        </dd>
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.nomeResponsavel)
        </dt>
        <dd class="col-sm-5">
            @Html.DisplayFor(model => model.nomeResponsavel)
        </dd>
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.cnpj)
        </dt>
        <dd class="col-sm-5">
            @if (!String.IsNullOrEmpty(Model.cnpj))
            {
                @Html.DisplayFor(modelItem => Model.cnpj)
            }
            else
            {
                <b>Não Informado</b>
            }
        </dd>
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.categoria)
        </dt>
        <dd class="col-sm-5">
            @Html.DisplayFor(model => model.categoria)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="hidden" id="idUsuarioAcesso" name="idUsuarioAcesso" value="@ViewBag.idUsuario" />
        <input type="submit" value="Exluir" class="btn btn-danger" /> |
        <a onclick="voltarPaginaInicialCliente('@Url.Action("RetornarPaginaPrincipal", "Clientes")', @ViewBag.idUsuario)">Voltar para a busca</a>
    </form>
</div>

<script>
    $("#navbarPagina").hide()
    $("#footerPagina").hide()
</script>
