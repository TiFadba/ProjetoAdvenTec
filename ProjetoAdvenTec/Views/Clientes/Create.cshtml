@model ProjetoAdvenTec.Models.Cliente

@{
    ViewData["Title"] = "Adicionar Cliente";
}

<style>
    body {
        color: white;
        background-color: #4F4F4F;
    }
</style>

<h1 class="text-center display-3"><i class="fas fa-user-tie mr-1"></i>Cadastrar Cliente </h1>

<h4 class="lead mt-3">Preencha os campos abaixo: </h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" id="idUsuarioAcesso" name="idUsuarioAcesso" value="@ViewBag.idUsuario" />

            <div class="row">
                <div class="col-sm-4 col-md-6 col-lg-6">
                    <div class="form-group">
                        <label asp-for="nomeCliente" class="control-label">Nome da Empresa<font style="color:red"> *</font></label>
                        <input asp-for="nomeCliente" class="form-control" maxlength="130" />
                        <span asp-validation-for="nomeCliente" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-4 col-md-6 col-lg-6">
                    <div class="form-group">
                        <label asp-for="nomeResponsavel" class="control-label">Nome do(a) Responável<font style="color:red"> *</font></label>
                        <input asp-for="nomeResponsavel" class="form-control" onkeypress="return verificarSeLetras(event);" maxlength="130" />
                        <span asp-validation-for="nomeResponsavel" class="text-danger"></span>
                    </div>
                </div>
            </div>

            @*<div class="row">
                    <div class="col-sm-4 col-md-6 col-lg-6">
                    </div>
                    <div class="col-sm-4 col-md-6 col-lg-6"></div>
                </div>*@

            <div class="row">
                <div class="col-sm-4 col-md-6 col-lg-6">
                    <div class="form-group">
                        <label asp-for="cnpj" class="control-label"></label>
                        <input asp-for="cnpj" class="form-control" onkeypress="return verificarSeNumeros(event);" maxlength="14" />
                        <span asp-validation-for="cnpj" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-4 col-md-6 col-lg-6">
                    <div class="form-group">
                        <label asp-for="email" class="control-label">Email para Contato<font style="color:red"> *</font></label>
                        <input asp-for="email" class="form-control" maxlength="130" />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Adicionar Cliente" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a onclick="voltarPaginaInicialCliente('@Url.Action("RetornarPaginaPrincipal","Clientes")', @ViewBag.idUsuario)">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    $("#navbarPagina").hide()
    $("#footerPagina").hide()
</script>
